<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/CircleAvatar"
            android:layout_margin="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/db_custom_button_welcome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/CircleAvatar"
            app:layout_constraintStart_toEndOf="@id/CircleAvatar"
            app:layout_constraintBottom_toBottomOf="@id/CircleAvatar"
            >
        </TextView>
        <TextView
            android:id="@+id/tvtLet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/CircleAvatar"
            app:layout_constraintTop_toBottomOf="@id/CircleAvatar"
            >
        </TextView>
        <TextView
            android:id="@+id/tvtPlann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amatoriali"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tvtLet"
            app:layout_constraintTop_toBottomOf="@id/tvtLet"
            >
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvtPlann"
            app:layout_constraintTop_toBottomOf="@id/tvtPlann">
        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>